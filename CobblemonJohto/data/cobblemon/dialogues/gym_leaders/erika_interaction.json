{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "Hello... Lovely weather, isn't it? It's so pleasant... I'm afraid I might doze off..."
            ],
            "input": "q.dialogue.set_page('battle_prompt');"
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "My name is Erika. I am the Leader of Celadon Gym. ...Oh? You are from Johto, you say? How nice..."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "isSelectable": "q.player.data.flying_gym_defeated == false",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "Oh. I'm sorry, I didn't realize that you wished to challenge me. I shall not lose."
            ],
            "escapeAction": "0",
            "input": [
                "q.player.run_command('scoreboard players set @s BattleStart 18');",
                "q.player.run_command('function johto:tools/forceclick');",
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "Oh! I concede defeat... You are remarkably strong..."
            ],
            "input": "q.dialogue.close();"
        }
    ]
}