{
    "speakers": {
        "npc": {
            "name": {
                "type": "expression",
                "expression": "q.npc.name"
            },
            "face": "q.npc.face();"
        },
        "player": {
            "face": "q.player.face();",
            "name": {
                "type": "expression",
                "expression": "q.player.username"
            }
        }
    },
    "pages": [
        {
            "id": "greeting",
            "speaker": "npc",
            "lines": [
                "I knew you were coming... Three years ago I had a vision of your arrival."
            ],
            "input": "q.dialogue.set_page('battle_prompt');"
        },
        {
            "id": "battle_prompt",
            "speaker": "npc",
            "lines": [
                "I don't enjoy battling, but it's my duty as a Gym Leader to confer Badges on anyone who has proven him- or herself worthy."
            ],
            "input": {
                "type": "option",
                "vertical": false,
                "options": [
                    {
                        "text": "§c⚔ Battle ⚔§r",
                        "value": "battle",
                        "isSelectable": "q.player.data.flying_gym_defeated == false",
                        "action": "q.dialogue.set_page('battle_start');"
                    },
                    {
                        "text": "No",
                        "value": "no",
                        "action": "q.dialogue.close();"
                    }
                ]
            }
        },
        {
            "id": "battle_start",
            "speaker": "npc",
            "lines": [
                "Since you wish it, I will show you my psychic powers!"
            ],
            "escapeAction": "0",
            "input": [
                "q.dialogue.close();",
                "v.battle = q.npc.start_battle(q.player);"
            ]
        },
        {
            "id": "post_defeat",
            "speaker": "npc",
            "lines": [
                "Your power... It far exceeds what I foresaw..."
            ],
            "input": "q.dialogue.close();"
        }
    ]
}